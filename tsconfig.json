{
  "compilerOptions": {
    "lib": ["es2017", "ESNext"],
    "typeRoots": ["node_modules/@types"],
    "target": "es2015",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "build",
    "rootDir": "app",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "downlevelIteration": true
  },
  "exclude": ["node_modules"]
}
